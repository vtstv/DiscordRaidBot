# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_application_id_here

# Discord OAuth (for web dashboard authentication)
DISCORD_CLIENT_SECRET=your_discord_oauth_client_secret_here
DISCORD_OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# Database Configuration
DATABASE_URL=postgresql://raidbot:raidbot_password@localhost:5432/raidbot

# Node Environment
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Prefix Commands (Optional - requires MessageContent intent in Discord Developer Portal)
# Set to 'true' to enable text commands like !event, $template, etc.
ENABLE_PREFIX_COMMANDS=false

# Web Panel (Optional)
WEB_ENABLED=false
WEB_PORT=3000
WEB_JWT_SECRET=your_jwt_secret_here
WEB_SESSION_SECRET=your_session_secret_here

# Redis (Optional - for job queues)
REDIS_URL=redis://localhost:6379

# Bot Settings
DEFAULT_TIMEZONE=UTC
REMINDER_INTERVALS=1h,15m

# Admin Panel
# Comma-separated Discord user IDs with admin access (get your ID from Discord developer mode)
ADMIN_USER_IDS=123456789012345678,987654321098765432

# Admin Panel Base URL (change for production)
ADMIN_BASE_URL=http://localhost:3000

# Optional: Password authentication (disabled by default, use Discord OAuth)
# Uncomment and set these to enable login/password authentication
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=your_secure_password_here
